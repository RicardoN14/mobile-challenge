<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/informationCardViewHeader"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/LabelStyle"
        android:id="@+id/informationCardViewTitle"
        android:textSize="@dimen/information_card_view_default_title_size"
        android:textColor="@color/colorPrimary"
        android:paddingBottom="16dp"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:text="Information Card View Title"
        tools:CTV_leftDrawable="R.drawable.ic_generic_detail_document_grey"
        android:drawablePadding="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>