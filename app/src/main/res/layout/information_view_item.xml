<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <!-- Label -->
    <androidx.appcompat.widget.AppCompatTextView
        style="@style/LabelStyle"
        android:id="@+id/informationViewItemLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorBlueGrey"
        android:paddingBottom="4dp"
        android:textSize="@dimen/information_view_default_label_size"
        android:layout_width="match_parent"
        android:textAllCaps="true"
        tools:text="LABEL"/>

    <!-- Value -->
    <androidx.appcompat.widget.AppCompatTextView
        style="@style/LabelStyle"
        android:id="@+id/informationViewItemValue"
        app:layout_constraintTop_toBottomOf="@+id/informationViewItemLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorDarkSlateBlue"
        android:textSize="@dimen/information_view_default_value_size"
        android:layout_width="0dp"
        tools:text="VALUE"/>


</androidx.constraintlayout.widget.ConstraintLayout>