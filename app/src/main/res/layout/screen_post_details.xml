<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pt.unbabel.demo.views.InformationCardView
        android:id="@+id/postDetailsInformationCardView"
        style="@style/RectangleWhiteStyle.InformationCardViewStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Author -->
        <pt.unbabel.demo.views.InformationView
            android:id="@+id/postDetailsAuthorInformationView"
            style="@style/InformationViewStyle"
            app:IFV_label="@string/post_details_author_label" />

        <!-- Description -->
        <pt.unbabel.demo.views.InformationView
            android:id="@+id/postDetailsDescriptionInformationView"
            style="@style/InformationViewStyle"
            app:IFV_label="@string/post_details_description_label" />

        <!-- Number Of Comments -->
        <pt.unbabel.demo.views.InformationView
            android:id="@+id/postDetailsNumberOfCommentsInformationView"
            style="@style/InformationViewStyle"
            app:IFV_label="@string/post_details_number_of_comments_label" />

    </pt.unbabel.demo.views.InformationCardView>

</androidx.constraintlayout.widget.ConstraintLayout>